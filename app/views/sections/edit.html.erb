<% collection_nav(@section_form.collection, :showcases) %>

<%= back_action_bar(edit_showcase_path(@section_form.showcase), '#' ) %>

<%= simple_form_for @section_form.form_url do | f | %>
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title"><%= t('.title') %></h3>
    </div>
    <div class="panel-body">
      <%= render partial: @section_form.form_partial, locals: { f: f } %>
    </div>
    <div class="panel-footer">
      <%= f.button :submit, value: t('buttons.save'), :class => 'btn-primary' %>
    </div>
  </div>
<% end %>

<%= DeletePanel.new(@section_form.section).display do | ds |
  ds.path = @section_form.form_url
end
%>
