
<div class="row">
  <div class="col-md-9">

    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Rename Showcase</h3>
      </div>
      <div class="panel-body">
        <%= simple_form_for [@showcase.exhibit, @showcase], :html => { :class => 'form-inline' } do |f| %>
          <%= display_errors(@exhibit) %>
          <%= f.input :title, wrapper: :inline_form %>
          <button name="commit" type="submit" class="btn btn-default"><span class="text-primary">Rename</span></button>
        <% end %>
      </div>
    </div>

    <%= DeleteSection.new(@showcase).display do | ds |
      ds.path = [@showcase.exhibit, @showcase]
      ds.message = "Procede with caution. This will remove the Showcase and all sections completely."
    end
    %>

  </div>
  <div class="col-md-3">

  </div>
</div>
