<table class="table table-striped item-list">
  <thead>
    <tr>
      <th><%= t('.title') %></th>
      <th></th>
      <th><%= t('.url') %></th>
      <th><%= t('.status') %></th>
      <th><%= t('.updated_at') %></th>
    </tr>
  </thead>
  <tbody>
    <% showcases.each do |showcase| %>
      <tr>
        <td class="image" >
          <%= link_to HoneypotThumbnail.display(showcase.honeypot_image), showcase_path(showcase) %>
        </td>
        <td>
          <h4 class="media-heading"><%= h link_to showcase.name_line_1, showcase_path(showcase) %></h4>
          <%= h showcase.description %>
        </td>
        <td>
          <a href="<%= CreateBeehiveURL.call(showcase) %>" target="_blank">View</a>
        </td>
        <td>
          <%= PublishedText.display(showcase) %>
        </td>
        <td>
           <%= ListTime.display(showcase.updated_at) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
