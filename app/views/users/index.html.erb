<%- model_class = User -%>
<div class="page-header">
  <h1 class="title">Admin Users</h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>User</th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do | user | %>
      <% if user.admin? %>
      <tr>
        <td><%= link_to user.display_name, edit_user_path(user) %></td>
        <td>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
            user_path(user),
            :method => :delete,
            :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure you wish delete this user?')) },
            :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
      <% end %>
    <% end %>
  </tbody>
</table>
<%= link_to 'Add Admin', new_user_path, class: "btn btn-primary" %>
