<div class="page-header">
  <h1><%=t '.title' %></h1>
</div>
<div class="container">

  <%= simple_form_for [@item.collection, @item.parent, @item], url: collection_item_children_path(@item.collection, @item.parent), :html => { class: 'new-item-dropzone', :multipart => true, :id => "fileupload"  } do |f| %>
    <div class="row">
      <%= f.button :submit, t('.upload_button'), class: 'btn btn-primary' %>
      <%= link_to t('.back_link', title: @item.parent.title), collection_item_path(@item.collection, @item.parent), class: 'btn btn-large' %>
    </div>
    <div class="row">
      <div class="dropzone">
        <div class="dropzone-previews"></div>
        <div class="dz-default dz-message"><span>Drop files here to upload</span></div>
      </div>
      <div class="fallback">
        <%= f.file_field :image %>
      </div>
    </div>
  <% end %>

</div>
