<% breadcrumb :collections %>
<%- model_class = Collection -%>

<%= page_title(t('.title', :default => model_class.model_name.human.pluralize.titleize)) %>

<div class="pull-right">
  <%= link_to t('.new', :default => t("New Collection")),
          new_collection_path,
          :class => 'btn btn-primary' %>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:title) %></th>
    </tr>
  </thead>
  <tbody>
    <% @collections.where("collections.deleted IS NOT TRUE").each do |collection| %>
      <% if permission.user_is_curator?(collection) or permission.user_is_administrator? %>
        <tr>
          <td><%= link_to collection.title, collection_items_path(collection) %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>
