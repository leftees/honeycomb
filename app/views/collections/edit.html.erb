<%- model_class = Collection -%>
<%= collection_title(@collection) %>

<div class="row">
  <div class="col-md-3">

    <div class="list-group">
      <a href="<%= edit_collection_path(@collection) %>" class="list-group-item active"><i class="glyphicon glyphicon-cog"></i> Settings</i></a>
      <a href="<%= edit_collection_path(@collection) %>" class="list-group-item "><i class="glyphicon glyphicon-user"></i> Curators </i></a>
      <a href="<%= edit_collection_path(@collection) %>" class="list-group-item "><i class="glyphicon glyphicon-tasks"></i> Metadata </i></a>
      <a href="<%= edit_collection_path(@collection) %>" class="list-group-item "><i class="glyphicon glyphicon-th-large"></i> Exhibit </i></a>

    </div>

  </div>

  <div class="col-md-9">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Settings</h3>
      </div>
      <%= simple_form_for @collection do |f| %>

        <div class="panel-body">
            <%= display_errors(@collection) %>
            <%= f.input :title, label: 'Collection Name', required: false %>
            <%= f.input :description, as: :text, label: 'Collection Description' %>
        </div>
        <div class="panel-footer">
          <button name="commit" type="submit" class="btn btn-default"><span class="text-primary">Update</span></button>
        </div>
      <% end %>
    </div>



    <%= DeleteSection.new(@collection).display do | ds |
      ds.message = "Procede with caution. This will also remove all items, exhibits, and showcases."
    end
    %>

  </div>
</div>

