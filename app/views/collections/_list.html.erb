<table class="table table-striped item-list">
  <thead>
    <tr>
      <th><%= t('.title') %></th>
      <th></th>
      <th></th>
      <th><%= t('.status') %></th>
      <th><%= t('.updated_at') %></th>
    </tr>
  </thead>
  <tbody>
    <% collections.each do |collection| %>
      <tr>
        <td class="image">
          <%= CollectionImage.new(collection).display %>
        <td>
          <h4 class="media-heading"><%= h link_to collection.name_line_1, collection_path(collection) %></h4>
          <div><%= strip_tags collection.short_intro if collection.short_intro.present? %></div>
        </td>
        <td><span class="badge"><%= t('.items_badge', number: collection.items.size) %></span></td>
        <td>
          <%= PublishedText.display(collection) %>
        </td>
        <td>
           <%= ListTime.display(collection.updated_at) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
