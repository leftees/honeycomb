<div class="menu-bar default pull-left">
  <div class="btn-group">
    <%= link_to raw("<i class=\"glyphicon glyphicon-plus\"></i> #{t('.new')}"),
      new_collection_item_path(collection),
      :class => 'btn btn-primary' %>
    <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown">
      <span class="caret"></span>
      <span class="sr-only"><%= t('toggle_dropdown') %></span>
    </button>
    <ul class="dropdown-menu" role="menu">
      <li><a href="#"><%= t('.import') %></a></li>
      <li><a href="#"><%= t('.export') %></a></li>
    </ul>
  </div>
  <div class="btn-group">
    <%= learn_more_button('#') %>
  </div>
</div>
<div class="menu-bar selected pull-left">
  <div class="btn-group">
    <%= t('.selected_items', number: '1') %>
  </div>
  <div class="btn-group">
    <%= link_to raw("<i class=\"glyphicon glyphicon-edit\"></i> #{t('.edit')}"),
      '#', :class => 'btn btn-default' %>
  </div>
  <div class="btn-group">
    <%= link_to raw("<i class=\"glyphicon glyphicon-eye-open\"></i> #{t('.publish')}"),
      '#', :class => 'btn btn-default' %>
    <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
      <span class="caret"></span>
      <span class="sr-only">t('toggle_dropdown') %></span>
    </button>
    <ul class="dropdown-menu" role="menu">
      <li><a href="#"><%= t('.publish') %></a></li>
      <li><a href="#"><%= t('.unpublish') %></a></li>
    </ul>
  </div>
</div>
