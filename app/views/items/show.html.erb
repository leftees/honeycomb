<%- model_class = Item -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %> <%= @item.title %></h1>
</div>

<div class="row">
  <div class="col-md-8">
    <% if @item.description.present? %>
      <%= @item.description %>
    <% end %>

    <%= link_to t('.back', :default => t("helpers.links.back")),
              collection_items_path(collection), :class => 'btn btn-default'  %>
    <%= link_to t('.edit', :default => t("helpers.links.edit")),
                  edit_collection_item_path(collection, @item), :class => 'btn btn-default' %>
    <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                  collection_item_path(collection, @item),
                  :method => 'delete',
                  :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                  :class => 'btn btn-danger' %>
  </div>
  <div class="col-md-4">
    <%= image_tag(@item.image.to_s, width: '90%') %>
  </div>
</div>

<% if @item.parent? %>
  <h2>Children</h2>
  <% if @item.recent_children.count > 0 %>
    <%= render partial: 'list_small', locals: { items: @item.recent_children } %>
  <% end %>
  <%= link_to "Manage Children", collection_item_children_path(collection, @item), class: 'btn btn-default' %>
<% end %>
