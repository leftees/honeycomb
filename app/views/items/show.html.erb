
<%= collection_title(@item.collection, 'Items') %>

<div class="row">
  <div class="col-md-9 item-show">
    <%= @item.page_title %>

    <%= render partial: "show", locals: { item: @item } %>

    <% if @item.is_parent? %>
      <div class="item-show-children clearfix">
        <h2><%= t '.children.title' %></h2>
        <div class="pull-right" style="padding-top: 5px;">
            <%= link_to raw("<i class=\"glyphicon glyphicon-plus\"></i> #{t('.children.manage_link')}"), new_collection_item_child_path(collection, @item), class: 'btn btn-primary' %>
        </div>
        <% if @item.recent_children.count > 0 %>
          <div id="DataTables_Table_0_wrapper" class="dataTables_wrapper form-inline dt-bootstrap no-footer">
            <div id="DataTables_Table_0_filter" class="dataTables_filter"><label>Search:<input type="search" class="form-control input-sm" placeholder="" aria-controls="DataTables_Table_0"></label></div>
          </div>
          <%= render partial: 'list_small', locals: { items: @item.recent_children } %>
        <% else %>
          <p>No <%= t '.children.title' %></p>
        <% end %>
      </div>

    <% end %>


    <div class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title">Proceed with caution</h3>
      </div>
      <div class="panel-body">
        <h4 class="">Delete this Item</h4>
        <p class="">Procede with caution. This will remove the item and all associated data.</p>
        <%= link_to raw("<span class=\"text-danger\">Delete this item</span>"),
                      collection_item_path(collection, @item),
                      :method => 'delete',
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you  sure?')) },
                      :class => 'btn btn-small btn-default' %>


      </div>
    </div>
  </div>
  <div class="col-md-3">
    <%= collection_nav(@item.collection, :items) %>
  </div></div>
