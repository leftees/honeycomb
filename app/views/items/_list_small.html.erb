<table class="table table-striped item-list">
  <thead>
    <tr>
      <th></th>
      <th>Item</th>
      <th>Last Modified</th>
    </tr>
  </thead>
  <tbody>
    <% items.each do |item| %>
      <tr>
        <td>
          <%= link_to item.react_thumbnail, item.edit_path %>
        </td>
        <td>
          <h4 class="media-heading"><%= h link_to item.title, item.edit_path %></h4>
          <%= h item.description %>
        </td>
        <td>
          <%= item.updated_at.to_s(:long) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
