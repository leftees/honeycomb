<%- model_class = Item -%>
<div class="page-header">
  <div class="pull-right">
    <%= link_to 'Add Items',
            new_collection_item_path(collection),
            :class => 'btn btn-primary' %>
  </div>
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>

<table class="table table-striped datatable">
  <thead>
    <tr>
      <th></th>
      <th>Item</th>
      <th>Last Modified</th>
      <th>Last Modified Timestamp</th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
      <th>Sortable Title</th>
    </tr>
  </thead>
  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td>
          <%= link_to raw(image_tag(item.image.url, height: 64)), edit_collection_item_path(item.collection, item), class: "pull-left" %></a>
        </td>
        <td>
          <h4 class="media-heading"><%= h item.title %></h4>
          <%= h item.description %>
        </td>
        <td>
          <%= item.updated_at.to_s(:long) %>
        </td>
        <td>
          <%= item.updated_at.to_i %>
        </td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_collection_item_path(item.collection, item), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      collection_item_path(item.collection, item),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure you want to delete this item?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
        <td>
          <%= item.sortable_title %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

