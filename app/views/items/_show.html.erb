<div class="row">
  <div class="col-md-8">

    <%= simple_form_for [@item.collection, @item], html: { :class => "item", id: 'edit-item' } do |f| %>
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">Metadata</h3>
        </div>
        <div class="panel-body">
            <%= render :partial => 'form', locals: { f: f } %>
        </div>
        <div class="panel-footer">
          <%= f.button :submit, "Save", class: 'btn btn-primary'%>
          <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                  collection_item_path(@item.collection, @item), :class => 'btn btn-default' %>

        </div>
      </div>

<% if @item.is_parent? %>
  <div class="item-show-children clearfix">
    <div class="panel panel-default">
      <div class="panel-heading">
        <div class="pull-right">
          <div class="btn-group">
            <%= link_to raw("<i class=\"glyphicon glyphicon-plus\"></i> #{t('.children.manage_link')}"), new_collection_item_child_path(collection, @item), class: 'btn btn-primary btn-xs' %>
            </div>
        </div>
        <h3 class="panel-title"><%= t('.children.title') %></h3>
      </div>
      <div class="panel-body">
        <% if @item.recent_children.count > 0 %>

          <%= render partial: 'list_small', locals: { items: @item.recent_children } %>
        <% else %>
          <p>There are no addtional resources associated with this item</p>
          <p>Additional eesources are intended to be items that provide context to the main item.  Examples might be a portrait of the creator or a map of where the item was created at. </p>
        <% end %>
      </div>
    </div>
  </div>
<% end %>
    <% end %>
  </div>
  <div class="col-md-4 item-show-image">
    <div class="panel panel-default">
      <div class="panel-heading"><strong>Media</strong></div>
      <div class="panel-body">

    <div class="item-show-image-box">
      <button class="btn btn-default image-zoom-fullscreen" data-target="#itemZoom<%= item.id %>"><span class="glyphicon glyphicon-zoom-in"></span></button>
      <%= item.thumbnail(:medium, height: '200') %>
      <% simple_form_for [@item.collection, @item], html: { :class => "edit-item-dropzone", :multipart => true } do |f| %>
        <div class="row">
          <div class="dropzone">
            <div class="dropzone-previews"></div>
            <div class="dz-message"><span>Drop image here to upload.</span></div>
          </div>
          <div class="fallback">
            <%= f.file_field :image %>
          </div>
        </div>
        <div style="width: 100%; text-align: center; background-color: gray; color: white; padding: 8px;">
          <%= f.button :submit, "Replace Image", class: 'btn btn-primary' %>
          <a href="#" style="color: white;"><i class="glyphicon glyphicon-refresh"></i> Replace</a>
        </div>
      <% end %>
    </div>
    <%= item.render_image_zoom(id: "itemZoom#{item.id}") %>
      </div>
    </div>

    <div class="panel panel-default">
      <div class="panel-heading"><strong>Publishing Options</strong></div>
      <div class="panel-body">
        <p>Choose if this item can be viewed.</p>
        <p><input type="radio" > Published</p>
        <p><input type="radio" > Unpublsihed</p>
      </div>
    </div>

    <div class="panel panel-default">
      <div class="panel-heading"><strong>Embed</strong></div>
      <div class="panel-body">
        <p>Copy and paste this code into the website where you want to embed this item.</p>
        <p><textarea> I AM AN EMBED CODE !!! I AM SO AWESOME.  YOUR WEBSITE WILL BE AMAZING WITH ME !</textarea></p>
      </div>
    </div>
  </div>
</div>
