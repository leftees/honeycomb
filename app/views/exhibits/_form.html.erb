
<%= simple_form_for [@exhibit.collection, @exhibit], :html => { :class => 'form-horizontal' } do |f| %>
  <%= display_errors(@exhibit) %>

  <%= f.input :title, as: :string %>
  <%= f.button :submit, :class => 'btn-primary', value: "Save" %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                collection_exhibits_path(@exhibit.collection), :class => 'btn btn-default' %>
<% end %>

